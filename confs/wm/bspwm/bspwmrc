#! /bin/sh
R() {
  pgrep -x "$@" > /dev/null || $@ &
}

bspc monitor -d G O O D B Y E 

bspc config border_width         1
bspc config window_gap           2
bspc config focused_border_color '#45475a'
bspc config normal_border_color  '#313244'

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a xfce4-panel layer=below sticky=off manage=on focus=off border=off locked=on
bspc rule -a "*:Toolkit:Picture-in-Picture" \
     state=floating sticky=on follow=off focus=on \
     rectangle=461x260+2760+1040
# bspc config bottom_padding 34

R sxhkd
R xfce4-panel --disable-wm-check 
R nm-applet
R xsetroot -cursor_name arrow
R ~/.fehbg
R xfce4-power-manager
R picom
R systemctl start dunst

