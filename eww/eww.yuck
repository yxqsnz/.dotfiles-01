(defwidget bar []
  (box :orientation "h"
    (workspaces)
    
    (sidestuff)))
(defwidget empty [] (box :class "label" ""))
(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end"
  	(metric :label "🔋"
              :value bat
              :onchange "")
           
    (metric :label "🔊"
            :value vol
            :onchange "pactl set-sink-volume @DEFAULT_SINK@ {}%")
    (metric :label "🎞️"
            :value {EWW_RAM.used_mem_perc}
            :onchange "")
    (metric :label "💾"
            :value {round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}
            :onchange "")
    (eventbox
    	:onhover "eww open status"
    	:onhoverlost "eww close status" 
    	  time)))

(defwidget workspaces []
  (literal :content workspaces_listen))
(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "start"
       :valign "start"
    {music != "" ? "🎵${music}" : ""}))


(defwidget metric [label value onchange]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
    (box :class "label" label)
    (scale :min 0
           :max 101
           :active {onchange != ""}
           :value value
           :onchange onchange)))



(deflisten music :initial ""
  "playerctl --follow metadata --format '{{ artist }} - {{ title }}' || true")

(defpoll vol :interval "1s"
  "scripts/getvol")
(defpoll bat :interval "1s"
  "scripts/getbat")

(defpoll time :interval "10s"
  "date '+%H:%M %b %d, %Y'")
(deflisten workspaces_listen "./scripts/workspaces eDP1")

(defwindow bar 
  :stacking "bottom"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "5%"
                      :anchor "center bottom")
  :reserve (struts :side "bottom" :distance "5%")
  (bar))
(defpoll status-lit :interval "1s"
  "scripts/music")
(defwindow status
  :class status
  :monitor 0
  
  :windowtype "dialog"
  :geometry (geometry 
  					  :y "-60px"
  					  :x "-20px"
                      :width "10px"
                      :height "200px"
                      :anchor "bottom right")
    (literal :content status-lit))
